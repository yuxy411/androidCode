<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/race"
    tools:context="com.example.dell.myapplication.RaceActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="60dp"
    >
    <Button
        android:id="@+id/btn_race_1"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:background="@drawable/basketball"
        android:onClick="basketball"
        android:textSize="25sp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/btn_race_2"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:background="@drawable/football"
        android:onClick="football"
        android:layout_gravity="center"
        />

</LinearLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_race_3"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:background="@drawable/badminton"
        android:gravity="center"
        android:onClick="badminton"
        android:textSize="25sp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/btn_race_4"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:background="@drawable/pingpang"
        android:gravity="center"
        android:onClick="pingpang"
        android:textSize="25sp"
        tools:ignore="OnClick" />
</LinearLayout>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_race_5"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:background="@drawable/swim"
        android:onClick="swimming"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="center"/>
</LinearLayout>
