<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="篮球场预约情况"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ImageView
        android:id="@+id/basketballground1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/basketball_ground" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/basketballground2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintTop_toTopOf="@+id/basketballground1"
        android:src="@drawable/basketball_ground" />

    <ImageView
        android:id="@+id/basketballground3"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/basketballground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/basketballground1"
        app:layout_constraintTop_toBottomOf="@+id/basketballground1"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/basketball_ground" />

    <ImageView
        android:id="@+id/basketballground4"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground3"
        app:layout_constraintEnd_toEndOf="@+id/basketballground2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/basketballground2"
        app:layout_constraintTop_toTopOf="@+id/basketballground3"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/basketball_ground" />

    <Button
        android:id="@+id/basketball_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />

    <Button
        android:id="@+id/basketball_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置"
        app:layout_constraintBottom_toBottomOf="@+id/basketball_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/basketball_confirm"
        app:layout_constraintTop_toTopOf="@+id/basketball_confirm" />

    <ImageView
        android:id="@+id/basketballground1up_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground1"
        app:layout_constraintEnd_toEndOf="@+id/basketballground1"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground1"
        app:layout_constraintTop_toTopOf="@+id/basketballground1"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/green_box" />

    <ImageView
        android:id="@+id/basketballground2up_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground2"
        app:layout_constraintEnd_toEndOf="@+id/basketballground2"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground2"
        app:layout_constraintTop_toTopOf="@+id/basketballground2"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/orange_box" />

    <ImageView
        android:id="@+id/basketballground3up_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground3"
        app:layout_constraintEnd_toEndOf="@+id/basketballground3"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground3"
        app:layout_constraintTop_toTopOf="@+id/basketballground3"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/red_box" />

    <ImageView
        android:id="@+id/basketballground4up_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground4"
        app:layout_constraintEnd_toEndOf="@+id/basketballground4"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground4"
        app:layout_constraintTop_toTopOf="@+id/basketballground4"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/green_box" />

    <CheckBox
        android:id="@+id/basketballground1up_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground1"
        app:layout_constraintEnd_toEndOf="@+id/basketballground1"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground1"
        app:layout_constraintTop_toTopOf="@+id/basketballground1"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/basketballground2up_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground2"
        app:layout_constraintEnd_toEndOf="@+id/basketballground2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground2"
        app:layout_constraintTop_toTopOf="@+id/basketballground2"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/basketballground3up_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground3"
        app:layout_constraintEnd_toEndOf="@+id/basketballground3"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground3"
        app:layout_constraintTop_toTopOf="@+id/basketballground3"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/basketballground4up_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground4"
        app:layout_constraintEnd_toEndOf="@+id/basketballground4"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground4"
        app:layout_constraintTop_toTopOf="@+id/basketballground4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/basketballground1down_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground1"
        app:layout_constraintEnd_toEndOf="@+id/basketballground1"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground1"
        app:layout_constraintTop_toTopOf="@+id/basketballground1"
        app:layout_constraintVertical_bias="0.55"
        android:src="@drawable/green_box" />

    <ImageView
        android:id="@+id/basketballground2down_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground2"
        app:layout_constraintEnd_toEndOf="@+id/basketballground2"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground2"
        app:layout_constraintTop_toTopOf="@+id/basketballground2"
        app:layout_constraintVertical_bias="0.55"
        android:src="@drawable/red_box" />

    <ImageView
        android:id="@+id/basketballground3down_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground3"
        app:layout_constraintEnd_toEndOf="@+id/basketballground3"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground3"
        app:layout_constraintTop_toTopOf="@+id/basketballground3"
        app:layout_constraintVertical_bias="0.55"
        android:src="@drawable/green_box" />

    <ImageView
        android:id="@+id/basketballground4down_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground4"
        app:layout_constraintEnd_toEndOf="@+id/basketballground4"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/basketballground4"
        app:layout_constraintTop_toTopOf="@+id/basketballground4"
        app:layout_constraintVertical_bias="0.55"
        android:src="@drawable/orange_box" />

    <CheckBox
        android:id="@+id/basketballground1down_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground1"
        app:layout_constraintEnd_toEndOf="@+id/basketballground1"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground1"
        app:layout_constraintTop_toTopOf="@+id/basketballground1"
        app:layout_constraintVertical_bias="0.58000004" />

    <CheckBox
        android:id="@+id/basketballground2down_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground2"
        app:layout_constraintEnd_toEndOf="@+id/basketballground2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground2"
        app:layout_constraintTop_toTopOf="@+id/basketballground2"
        app:layout_constraintVertical_bias="0.58000004" />

    <CheckBox
        android:id="@+id/basketballground3down_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground3"
        app:layout_constraintEnd_toEndOf="@+id/basketballground3"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground3"
        app:layout_constraintTop_toTopOf="@+id/basketballground3"
        app:layout_constraintVertical_bias="0.58000004" />

    <CheckBox
        android:id="@+id/basketballground4down_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/basketballground4"
        app:layout_constraintEnd_toEndOf="@+id/basketballground4"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/basketballground4"
        app:layout_constraintTop_toTopOf="@+id/basketballground4"
        app:layout_constraintVertical_bias="0.58000004" />

</android.support.constraint.ConstraintLayout>