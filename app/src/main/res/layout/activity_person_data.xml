    <LinearLayout
        android:id="@+id/ll_persondata_identity"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        >
        <TextView
            android:id="@+id/et_person_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="身份：   "
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <RadioGroup
            android:id="@+id/rg_persondata_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <RadioButton
                android:id="@+id/rb_persondata_teacher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="学生  "
                android:checked="true"
                android:textSize="18sp"
                />
            <RadioButton
                android:id="@+id/rb_persondata_student"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="教师  "
                android:textSize="18sp"
                />
            <RadioButton
                android:id="@+id/rb_persondata_others"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="其他"
                android:textSize="18sp"
                />
        </RadioGroup>
    </LinearLayout>
   <LinearLayout
       android:id="@+id/ll_persondata_bottom"
