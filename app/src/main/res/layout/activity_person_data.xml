         android:layout_marginTop="160dp"
         android:text=" 用户名："
         android:textColor="@color/black"
         android:textSize="20sp"
         />
     <EditText
         android:id="@+id/et_persondata_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="160dp"
          android:textSize="20sp"
         />
 </LinearLayout>


